<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/price_asc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by price ascending"/>

    <Button
        android:id="@+id/price_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by price descending" />

    <Button
        android:id="@+id/date_asc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by date ascending" />

    <Button
        android:id="@+id/date_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by date descending"/>

</LinearLayout>